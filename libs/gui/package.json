{
  "name": "o324-gui",
  "description": "GUI for the o324 time tracker",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc && qwik build",
    "build.bak": "tsc && vite build",
    "build.client": "vite build",
    "build.preview": "vite build --ssr src/entry.preview.tsx",
    "build.server": "vite build -c adapters/static/vite.config.ts",
    "build.types": "tsc --incremental --noEmit",
    "ts-watch": "tsc --noEmit --incremental --preserveWatchOutput --pretty --watch",
    "deploy": "echo 'Run \"npm run qwik add\" to install a server adapter'",
    "dev": "vite",
    "tauri": "tauri",
    "dev.debug": "node --inspect-brk ./node_modules/vite/bin/vite.js --mode ssr --force",
    "dev.ssr": "vite --mode ssr",
    "fmt": "prettier --write .",
    "fmt.check": "prettier --check .",
    "lint": "eslint \"src/**/*.ts*\"",
    "lint.fix": "npm run lint -- --fix",
    "preview": "qwik build preview && vite preview --open",
    "preview.bak": "vite preview",
    "test.unit": "vitest",
    "test.unit.ui": "vitest --ui",
    "qwik": "qwik",
    "start": "vite --open --mode ssr"
  },
  "dependencies": {
    "@builder.io/qwik": "^1.5.5",
    "@builder.io/qwik-city": "^1.5.2",
    "@qwik-ui/headless": "^0.3.8",
    "@tauri-apps/api": "^2.3",
    "@tauri-apps/plugin-shell": "^2.3",
    "@tauri-apps/plugin-store": "^2.3",
    "date-fns": "^3.6.0",
    "focus-trap": "^7.5.4",
    "remeda": "^1.61.0",
    "sharp": "^0.33.1",
    "tailwind-merge": "^2.1.0",
    "ts-essentials": "^10.0.0",
    "ts-pattern": "^5.0.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@modular-forms/qwik": "^0.23.1",
    "@svgx/vite-plugin-qwik": "^1.0.1",
    "@tauri-apps/cli": "^2.3",
    "@types/eslint": "^8.44.8",
    "@types/node": "^20.10.3",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5",
    "eslint-plugin-qwik": "^1.3.5",
    "internal-ip": "^7.0.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.3.3",
    "undici": "^5.26.0",
    "vite": "^5.0.0",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^3.2.4"
  }
}
