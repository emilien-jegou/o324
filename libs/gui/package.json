{
  "name": "o324-gui",
  "description": "GUI for the o324 time tracker",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc && qwik build",
    "build.bak": "tsc && vite build",
    "build.client": "vite build",
    "build.preview": "vite build --ssr src-frontend/entry.preview.tsx",
    "build.server": "vite build -c adapters/static/vite.config.ts",
    "build.types": "tsc --incremental --noEmit",
    "deploy": "echo 'Run \"npm run qwik add\" to install a server adapter'",
    "dev": "vite",
    "tauri": "tauri",
    "dev.debug": "node --inspect-brk ./node_modules/vite/bin/vite.js --mode ssr --force",
    "dev.ssr": "vite --mode ssr",
    "fmt": "prettier --write .",
    "fmt.check": "prettier --check .",
    "lint": "eslint \"src-frontend/**/*.ts*\"",
    "lint.fix": "npm run lint -- --fix",
    "preview": "qwik build preview && vite preview --open",
    "preview.bak": "vite preview",
    "qwik": "qwik",
    "start": "vite --open --mode ssr"
  },
  "dependencies": {
    "@builder.io/qwik-city": "^1.5.2",
    "@qwik-ui/headless": "^0.3.8",
    "@tailwindcss/postcss": "^4.0.0-alpha.14",
    "@tauri-apps/api": "^2.0.0-beta.9",
    "@tauri-apps/plugin-shell": ">=2.0.0-beta.0",
    "date-fns": "^3.0.5",
    "sharp": "^0.33.1",
    "tailwind-merge": "^2.1.0",
    "ts-pattern": "^5.0.6"
  },
  "devDependencies": {
    "@modular-forms/qwik": "^0.22.0",
    "@tauri-apps/cli": ">=2.0.0-beta.0",
    "@types/eslint": "^8.44.8",
    "@types/node": "^20.10.3",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5",
    "eslint-plugin-qwik": "^1.3.1",
    "internal-ip": "^7.0.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "tailwindcss": "^4.0.0-alpha.14",
    "typescript": "^5.3.2",
    "undici": "^5.26.0",
    "vite": "^5.0.0",
    "vite-tsconfig-paths": "^4.2.1"
  }
}
